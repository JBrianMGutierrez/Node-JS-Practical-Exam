<link rel='stylesheet' href='/stylesheets/style.css' />
<div>
  <form method="POST" action="../edit/<%= item.id %>">
    <label for="name">Item Name</label>
    <input type="text" id="name" name="name" value="<%= item.name %>" placeholder="Item name">

    <label for="qty">Quantity</label>
    <input type="number" id="qty" name="qty" value="<%= item.qty %>" placeholder="Quantity" step="1">

     <label for="amount">Amount</label>
        <input type="number" id="amount" name="amount" value="<%= item.amount %>" placeholder="Amount" step="1">

    <input type="submit" value="Submit">
  </form>
</div>